<Window 
    x:Class="SecretStore.AddSecretWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    WindowStyle="None"
    ResizeMode="CanResize"
    WindowStartupLocation="CenterScreen"
    Height="420" Width="520"
    Background="#1E1E1E">

    <Grid Margin="18" Background="{StaticResource PanelBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Добавление нового секрета"
                   FontSize="18"
                   FontWeight="Bold"
                   Margin="0,0,0,16"
                   Foreground="{StaticResource AccentBrush}"/>

        <StackPanel Grid.Row="1" Orientation="Vertical">
            <TextBlock Text="Название" Foreground="{StaticResource TextDimBrush}"/>
            <TextBox x:Name="NameBox" />

            <TextBlock Text="Логин" Foreground="{StaticResource TextDimBrush}"/>
            <TextBox x:Name="LoginBox" />

            <TextBlock Text="Пароль" Foreground="{StaticResource TextDimBrush}"/>
            <PasswordBox x:Name="PasswordBox" />

            <TextBlock Text="Примечание" Foreground="{StaticResource TextDimBrush}"/>
            <TextBox x:Name="NoteBox" AcceptsReturn="True" Height="90"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,18,0,0">
            <Button x:Name="SaveBtn" Content="Сохранить" Width="120" Margin="4" Click="SaveButton_Click"/>
            <Button x:Name="CancelBtn" Content="Отмена" Width="120" Margin="4" Click="CancelBtn_Click" />
        </StackPanel>
    </Grid>
</Window>