<Window x:Class="SecretStore.InfoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Уведомление"
        WindowStyle="None"
        ResizeMode="NoResize"
        Height="200" Width="420"
        WindowStartupLocation="CenterScreen"
        Background="#1E1E1E"
        ShowInTaskbar="False">

    <Grid Margin="18" >
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock x:Name="TitleText"
                   Grid.Row="0"
                   Text="Информация"
                   FontSize="17"
                   HorizontalAlignment="Center"
                   FontFamily="Consolas"
                   Margin="0,0,0,16"/>

        <!-- Сообщение -->
        <TextBlock x:Name="MessageText"
                   Grid.Row="1"
                   Text="Текст уведомления"
                   FontFamily="Consolas"
                   FontSize="15"
                   TextAlignment="Center"
                   TextWrapping="Wrap"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   Margin="10"/>

        <!-- Кнопка -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,16,0,0">
            <Button Content="OK" Width="120" Height="32" IsDefault="True" Click="OkButton_Click"/>
        </StackPanel>
    </Grid>
</Window>